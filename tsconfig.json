{
  "extends": "@tsconfig/remix/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./app/",
    "paths": {
      "~/*": ["*"],
      "*": [""]
    },
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules/"]
}
